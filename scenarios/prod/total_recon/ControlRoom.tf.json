{
  "resource": [
    {
      "docker_container": [
        {
          "SNAME_ControlRoom": [
            {
              "capabilities": [
                {
                  "add": [
                    "NET_ADMIN",
                    "SYS_PTRACE"
                  ]
                }
              ],
              "command": [
                "/usr/sbin/sshd",
                "-D"
              ],
              "connection": [
                {
                  "host": "${self.ports[0].ip}",
                  "password": "root",
                  "port": "${self.ports[0].external}",
                  "type": "ssh",
                  "user": "root"
                }
              ],
              "hostname": "ControlRoom",
              "image": "sanivo/edurange-ubuntu-sshd:16.04",
              "name": "SNAME_ControlRoom",
              "networks_advanced": [
                {
                  "ipv4_address": "OCTET.1.0.11",
                  "name": "SNAME_NAT"
                },
                {
                  "ipv4_address": "OCTET.0.250.5",
                  "name": "SNAME_MARS"
                }
              ],
              "ports": [
                {
                  "internal": 22
                }
              ],
              "provisioner": [
                {
                  "remote-exec": [
                    {
                      "inline": [
                        "USERS",
                        "EXECS"
                      ]
                    }
                  ]
                }
              ],
              "restart": "always"
            }
          ]
        }
      ]
    }],
  "locals": [
    {
      "SNAME_ControlRoom_extern": "${tostring(docker_container.SNAME_ControlRoom.ports[0].external)}"
    }
  ],
  "output": [
    {
      "SNAME_ControlRoom": [
        {
          "value": [
            {
              "ip_address_public": "${join(\":\", [\"EXTERN_HOST\", local.SNAME_ControlRoom_extern])}",
              "name": "SNAME_ControlRoom"
            }
          ]
        }
      ]
    }
  ]

}
